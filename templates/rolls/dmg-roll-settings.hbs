<form>
    <div class="form-group">
        <label>{{localize "the-expanse.setStuntDmg"}}</label>
        <select name="setStuntDamage">
            {{#select data.diceType}}
            <option value="0">-</option>
            <option value="1">1{{localize "the-expanse.settings.d6"}}</option>
            <option value="2">2{{localize "the-expanse.settings.d6"}}</option>
            {{/select}}
        </select>
    </div>
        <div class="form-group">
        <label>{{localize "the-expanse.setDmgExtraDice"}}</label>
        <select name="setDmgExtraDice">
            {{#select data.diceType}}
            <option value="0">-</option>
            <option value="1">1{{localize "the-expanse.settings.d6"}}</option>
            <option value="2">2{{localize "the-expanse.settings.d6"}}</option>
            <option value="3">3{{localize "the-expanse.settings.d6"}}</option>
            <option value="4">4{{localize "the-expanse.settings.d6"}}</option>
            <option value="5">5{{localize "the-expanse.settings.d6"}}</option>
            <option value="6">6{{localize "the-expanse.settings.d6"}}</option>
            <option value="7">7{{localize "the-expanse.settings.d6"}}</option>
            <option value="8">8{{localize "the-expanse.settings.d6"}}</option>
            <option value="9">9{{localize "the-expanse.settings.d6"}}</option>
            <option value="10">10{{localize "the-expanse.settings.d6"}}</option>
            {{/select}}
        </select>
    </div>
        <div class="form-group">
        <label>{{localize "the-expanse.setRollGeneralMod"}}</label>
        <input type="number" name="setDmgGeneralMod"/>
    </div>
    <div class="form-group">
        <label>{{localize "the-expanse.chatCard.addStuntDie"}}</label>
        <input type="number" name="stuntDieDmg" value="{{stuntDmg}}"/>
    </div>
    <div class="form-group">
        <input type="checkbox" name="addFocus" {{checked addFocus}}/>
        <label>{{localize "the-expanse.chatCard.addFocus"}}</label>
    </div>
</form>